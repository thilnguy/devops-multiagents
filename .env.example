# DevOps Multi-Agent Ecosystem - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# MCP Server Credentials (Required for production)
# =============================================================================

# GitHub - Required for repository management
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-token-here

# Jenkins - Required for CI/CD operations
JENKINS_URL=https://your-jenkins-url.com
JENKINS_USERNAME=your-username
JENKINS_API_TOKEN=your-jenkins-api-token

# =============================================================================
# AWS Configuration (Required for Terraform)
# =============================================================================

# AWS credentials - use IAM roles in production
AWS_REGION=eu-west-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Kubeconfig path (default: ~/.kube/config)
# KUBECONFIG=/path/to/kubeconfig

# Kubernetes namespace
K8S_NAMESPACE=devops-multiagents

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (dev, staging, production)
ENVIRONMENT=dev

# Logging level
LOG_LEVEL=INFO

# API Gateway port
API_PORT=8080

# =============================================================================
# Feature Flags
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Enable debug mode (never in production)
DEBUG=false

# =============================================================================
# Security Notes
# =============================================================================
# 
# 1. Never commit this file with real credentials
# 2. Use environment-specific .env files (.env.dev, .env.prod)
# 3. In production, use secret management (AWS Secrets Manager, Vault, etc.)
# 4. Rotate credentials regularly
# 5. Use IAM roles instead of access keys when possible
